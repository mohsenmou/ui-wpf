<Window x:Class="Dev.MainWindow" x:Name="window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="https://github.com/mohsenmou/ui-wpf"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="Mohsenmou.UI.WPF"
    Width="800"
    Height="450"
    mui:WindowSettings.Save="True"
    FlowDirection="LeftToRight"
    FontFamily="Segoe UI Light"
    FontSize="14"
    Icon="{Binding Path=Icon_TeRex, Converter={mui:XamlImageKeyToImageSourceConverter ForegroundResourceKey=WindowHeaderForeground, Height=16, Width=16}}"
    Style="{DynamicResource MainWindowStyle}">
    <Grid Background="{mui:ThemeResource ResourceKey=ContentBackground}">

        <TabControl Margin="5">
            <TabItem Header="Item 1">
                <StackPanel Margin="5">
                    <TextBlock>This is content of item #1</TextBlock>
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 1" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 2" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 3" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 4" />
                    <CheckBox Margin="5">CheckBox 1</CheckBox>
                    <CheckBox Margin="5">CheckBox 2</CheckBox>


                    <TextBlock
                        Margin="5,5,5,0"
                        Text="Enter Username:" />

                    <mui:Badged
                        Margin="5"
                        HorizontalAlignment="Left"
                        Badge="{Binding ElementName=txt, Path=Text.Length}"
                        IsBadgeSet="True">
                        <TextBox x:Name="txt"
                            Width="150"
                            Margin="0,0,0,0"
                            mui:TextBoxHelper.ClearTextButton="True"
                            mui:TextBoxHelper.Watermark="Username" />
                    </mui:Badged>

                    <mui:Badged
                        Margin="5"
                        HorizontalAlignment="Left"
                        Badge="{Binding ElementName=txt, Path=Text.Length}"
                        IsBadgeSet="True">
                        <Button
                            Width="200"
                            mui:ButtonProperties.Icon="{DynamicResource Icon_Expand}"
                            mui:ButtonProperties.ShowIcon="True"
                            Content="Submit" />
                    </mui:Badged>


                    <!--<Button x:Name="btn" HorizontalAlignment="Left"
                        Width="85"
                        Margin="5"
                        mui:ButtonProperties.Icon="{DynamicResource Icon_TeRex}"
                        mui:ButtonProperties.ShowIcon="True"
                        Click="OnClick">
                        Submit
                    </Button>


                    <Button HorizontalAlignment="Left"
                        Width="85"
                        Margin="5,5,400,0"
                        mui:ButtonProperties.Icon="{DynamicResource Icon_Delete}"
                        mui:ButtonProperties.ShowIcon="True">
                        Submit
                    </Button>-->


                </StackPanel>
            </TabItem>
            <TabItem Header="Item 2">
                <StackPanel Margin="5">
                    <TextBlock Margin="5">This is content of item #2</TextBlock>
                    <mui:Accordion
                        Width="200"
                        Height="500"
                        Margin="5"
                        HorizontalAlignment="Left">
                        <mui:AccordionItem Header="Item 1">
                            <mui:AccordionItem Header="SubItem 1" />
                            <mui:AccordionItem Header="SubItem 2" />
                            <mui:AccordionItem Header="SubItem 3" />
                            <mui:AccordionItem Header="SubItem 4" />
                        </mui:AccordionItem>

                        <mui:AccordionItem Header="Item 2">
                            <mui:AccordionItem Header="SubItem 1" />
                            <mui:AccordionItem Header="SubItem 2" />
                        </mui:AccordionItem>
                    </mui:Accordion>
                </StackPanel>
            </TabItem>
            <TabItem Header="Item 3">

                <Grid
                    Margin="20"
                    Background="Yellow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <mui:Badged
                        Badge="3"
                        IsBadgeSet="True">
                        <Button
                            mui:ButtonProperties.Icon="{DynamicResource Icon_Delete}"
                            mui:ButtonProperties.ShowIcon="True"
                            Content="Submit" />
                    </mui:Badged>
                </Grid>

            </TabItem>
            <TabItem Header="Item 4">
                <TextBlock Margin="5">This is content of item #4</TextBlock>
            </TabItem>
            <TabItem Header="Item 5">
                <TextBlock Margin="5">This is content of item #5</TextBlock>
            </TabItem>
            <TabItem Header="Item 6">
                <TextBlock Margin="5">This is content of item #6</TextBlock>
            </TabItem>
            <TabItem Header="Item 7">
                <TextBlock Margin="5">This is content of item #7</TextBlock>
            </TabItem>
            <TabItem Header="Item 8">
                <TextBlock Margin="5">This is content of item #8</TextBlock>
            </TabItem>
            <TabItem Header="Item 9">
                <TextBlock Margin="5">This is content of item #9</TextBlock>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
