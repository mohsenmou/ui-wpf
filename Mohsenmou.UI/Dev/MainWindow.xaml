<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mohsenmou.UI.WPF.Controls;assembly=Mohsenmou.UI.WPF"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    mui:WindowSettings.Save="True"
    Style="{DynamicResource MainWindowStyle}">
    <Grid Background="{mui:ThemeResource ResourceKey=ContentBackground}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <controls:Accordion>
            <mui:AccordionItem Header="First">
                <Button BorderThickness="0">Add</Button>
                <Button>Delete</Button>
            </mui:AccordionItem>
            <mui:AccordionItem Header="Second">
                <Button>Update</Button>
                <Button>Reset</Button>
            </mui:AccordionItem>
        </controls:Accordion>
    </Grid>
</Window>
