<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="Mohsenmou.UI.WPF"
    Width="800"
    Height="450"
    FontFamily="Segoe UI Light"
    FontSize="14"
    Icon="{Binding Path=Icon_TeRex, Converter={mui:XamlImageKeyToImageSourceConverter ForegroundResourceKey=WindowHeaderForeground, Height=16, Width=16}}"
    Style="{DynamicResource MainWindowStyle}">
    <Grid Background="{mui:ThemeResource ResourceKey=ContentBackground}">

        <TabControl Margin="5">
            <TabItem Header="Item 1">
                <StackPanel Margin="5">
                    <TextBlock>This is content of item #1</TextBlock>
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 1" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 2" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 3" />
                    <RadioButton
                        Margin="5"
                        Content="Radio Button 4" />
                    <CheckBox Margin="5">CheckBox 1</CheckBox>
                    <CheckBox Margin="5">CheckBox 2</CheckBox>

                    <TextBlock Margin="5,5,5,0" Text="Enter Username:"/>
                    <TextBox
                        Width="150"
                        Margin="5"
                        HorizontalAlignment="Left"
                        mui:TextBoxHelper.ClearTextButton="True"
                        mui:TextBoxHelper.Watermark="Username" />
                    
                    <Button
                        Width="85"
                        Margin="5"
                        HorizontalAlignment="Left"
                        mui:ButtonProperties.Icon="{DynamicResource Icon_TeRex}"
                        mui:ButtonProperties.ShowIcon="True">
                        Submit
                    </Button>

         
                </StackPanel>
            </TabItem>
            <TabItem Header="Item 2">
                <TextBlock Margin="5">This is content of item #2</TextBlock>
            </TabItem>
            <TabItem Header="Item 3">
                <TextBlock Margin="5">This is content of item #3</TextBlock>
            </TabItem>
            <TabItem Header="Item 4">
                <TextBlock Margin="5">This is content of item #4</TextBlock>
            </TabItem>
            <TabItem Header="Item 5">
                <TextBlock Margin="5">This is content of item #5</TextBlock>
            </TabItem>
            <TabItem Header="Item 6">
                <TextBlock Margin="5">This is content of item #6</TextBlock>
            </TabItem>
            <TabItem Header="Item 7">
                <TextBlock Margin="5">This is content of item #7</TextBlock>
            </TabItem>
            <TabItem Header="Item 8">
                <TextBlock Margin="5">This is content of item #8</TextBlock>
            </TabItem>
            <TabItem Header="Item 9">
                <TextBlock Margin="5">This is content of item #9</TextBlock>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
