<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontFamily="Segoe UI Light">
    <Grid Background="{mui:ThemeResource ResourceKey=ContentBackground}">
        <CheckBox x:Name="EnabledInput"
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="IsEnabled"
            IsChecked="True" />
        <Button
            Margin="8"
            Padding="8,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="OnClick"
            Content="Switch Theme"
            IsDefault="True" />
        <GroupBox
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Header="GroupBox"
            IsEnabled="{Binding ElementName=EnabledInput, Path=IsChecked}">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock
                    Margin="0,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="{mui:ThemeResource ResourceKey=ContentForeground}"
                    Text="This is a sample" />
                <Button
                    Margin="0,8"
                    Content="Button" />
                <CheckBox
                    Margin="0,8"
                    Content="Check Box" />
                <ComboBox Margin="0,8">
                    <ComboBoxItem
                        Content="Item 1"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 2"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 3"
                        IsSelected="True" />
                </ComboBox>
                <ComboBox
                    Margin="0,8"
                    IsEditable="True">
                    <ComboBoxItem
                        Content="Item 1"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 2"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 3"
                        IsSelected="True" />
                </ComboBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
