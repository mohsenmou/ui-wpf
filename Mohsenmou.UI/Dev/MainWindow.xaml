<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="Mohsenmou.UI.WPF"
    Width="800"
    Height="450"
    FontFamily="Segoe UI Light"
    FontSize="14"
    Icon="{Binding Path=Icon_TeRex, Converter={mui:XamlImageKeyToImageSourceConverter ForegroundResourceKey=WindowHeaderForeground, Height=16, Width=16}}"
    Style="{DynamicResource MainWindowStyle}">
    <Grid Background="{mui:ThemeResource ResourceKey=ContentBackground}">

        <TabControl Margin="5">
            <TabItem Header="Item 1">
                <TextBlock Margin="5">This is content of item #1</TextBlock>
            </TabItem>
            <TabItem Header="Item 2">
                <TextBlock Margin="5">This is content of item #2</TextBlock>
            </TabItem>
            <TabItem Header="Item 3">
                <TextBlock Margin="5">This is content of item #3</TextBlock>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
