<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="https://github.com/mohsenmou/ui-wpf"
    Title="Mohsenmou.UI.WPF"
    Width="800"
    Height="450"
    FontFamily="Segoe UI Light"
    FontSize="14"
    Icon="{Binding Path=Icon_TeRex, Converter={mui:XamlImageKeyToImageSourceConverter ForegroundResourceKey=WindowHeaderForeground, Height=16, Width=16}}"
    Style="{DynamicResource MainWindowStyle}">
    <Grid
        Background="{mui:ThemeResource ResourceKey=ContentBackground}"
        ScrollViewer.HorizontalScrollBarVisibility="Auto"
        ScrollViewer.VerticalScrollBarVisibility="Auto">
        <CheckBox x:Name="EnabledInput"
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="IsEnabled"
            IsChecked="True" />
        <GroupBox
            Width="200"
            Margin="10,50"
            HorizontalAlignment="Left"
            Header="GROUPBOX"
            IsEnabled="{Binding ElementName=EnabledInput, Path=IsChecked}">
            <StackPanel>
                <Button
                    Margin="0,8"
                    Content="BUTTON"
                    IsDefault="False" />
                <CheckBox x:Name="check"
                    Margin="0,8"
                    Content="Check Box"
                    IsChecked="True" />
                <ComboBox
                    Name="cbo"
                    Margin="0,8">
                    <ComboBoxItem
                        Content="Item 1"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 2"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 3"
                        IsSelected="True" />
                </ComboBox>
                <ComboBox
                    Name="editCbo"
                    Margin="0,8"
                    IsEditable="True">
                    <ComboBoxItem
                        Content="Item 1"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 2"
                        IsSelected="True" />
                    <ComboBoxItem
                        Content="Item 3"
                        IsSelected="True" />
                </ComboBox>
                <TextBox x:Name="txt"
                    Margin="0,8"
                    mui:TextBoxHelper.ClearTextButton="True"
                    mui:TextBoxHelper.Watermark="Username"
                    Text="TextBox" />
                <ProgressBar
                    Margin="0,8"
                    IsIndeterminate="True"
                    Maximum="100"
                    Minimum="0"
                    Value="50" />
                <Slider
                    Margin="0,8"
                    IsSelectionRangeEnabled="True"
                    IsSnapToTickEnabled="True"
                    Maximum="100"
                    Minimum="0"
                    Orientation="Horizontal"
                    SelectionEnd="75"
                    SelectionStart="50"
                    Value="50" />
                <ListBox
                    Height="100"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBoxItem>Item 1</ListBoxItem>
                    <ListBoxItem>Item 2</ListBoxItem>
                    <ListBoxItem>Item 3</ListBoxItem>
                    <ListBoxItem>Item 4</ListBoxItem>
                    <ListBoxItem>Item 5</ListBoxItem>
                    <ListBoxItem>Item 6</ListBoxItem>
                    <ListBoxItem>Item 7</ListBoxItem>
                    <ListBoxItem>Item 8, This is long list item that can not be wrapped into two list items</ListBoxItem>
                </ListBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
